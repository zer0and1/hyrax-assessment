{{page-title "Hyrax Assessment"}}

<div>
  <Sidebar @items={{@model.samples}} />

  <div class="lg:pl-64">
    <div class="sticky top-0 z-40 flex h-16 shrink-0 items-center shadow-sm">
      <button type="button" class="-m-2.5 p-2.5 text-gray-700 lg:hidden">
        <span class="sr-only">Open sidebar</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
          />
        </svg>
      </button>

      <div class="flex flex-1 self-stretch bg-column-header-background-color px-4">
        <div class="flex items-center text-white font-bold uppercase">
          Results
        </div>
      </div>
    </div>

    <main class="py-10">
      <div class="px-4 sm:px-6 lg:px-8">
        {{outlet}}
      </div>
    </main>
  </div>
</div>
